{% extends 'front/layout.html.twig' %}

{% block title %}Accueil{{ parent() }}{% endblock %}

{% block main %}
    <main>
            <section id="container-video">
                <video autoplay muted loop id="background-video">
                    <source src="./assets/video/video-background.mp4" type="video/mp4">
                    Votre navigateur ne supporte pas les vidéos HTML5.
                </video>
                <input class="bouton-bleu" type="button" value="EN SAVOIR PLUS" id="know-more" />
            </section>
            
            <section class="welcome">
                <div id="welcome-text">
                    <h1>Bienvenue sur ROCKET TIPS !</h1>
                    <p>Tu souhaites progresser sur Rocket League ou échanger avec la communauté ?</p>
                    <p>Tu es au bon endroit !</p>
                </div>
                <div class="icons">
                    <div class="icon">
                        <img src="./assets/img/carbook.webp" alt="Articles">
                        <p><a href="?route=articles">Articles</a></p>
                    </div>
                    <div class="icon">
                        <img src="./assets/img/forum-icon.webp" alt="Forum">
                        <p><a href="?route=forum">Forum</a></p>
                    </div>
                </div>
            </section>
    
            <section class="articles">
                <h2>Nos derniers articles</h2>
                <div class="container-articles">
                    {% for article in articles %}
                        
                        <div class="article-item">
                            <a href="?route=article&id={{ article.id|striptags }}">
                                <img src="{{ article.image_url }}" alt="{{ article.image_alt|striptags }}">
                                <h3>{{ article.title|striptags }}</h3>
                            </a>
                        </div>
                    {% endfor %}
                </div>
            </section>
    </main>
{% endblock %}